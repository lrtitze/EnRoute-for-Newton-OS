InstallScript := func(partFrame)	begin	// Allow our app to hook itself into EnRoute and	// the transport after it is installed in the root	// by calling "XInstallExtension" later.	AddDelayedCall ( kER_Install_MIME_extn, [ kAppSymbol ], 10 );	// Do the standard NewtApp InstallScript stuff	// new way to make sure NewtApp stationery works from Apple Q&A	local mainLayout := partFrame.theForm;	local defSym, defFrame, vDef;	if mainLayout.allViewDefs then		foreach defSym, defFrame in mainLayout.allViewDefs do			foreach vDef in defFrame do				begin				RegisterViewDef ( vDef, EnsureInternal ( defSym ) );				end;	partFrame.removeFrame :=		(partFrame.theForm):NewtInstallScript(partFrame.theForm);	end;RemoveScript := func(partFrame)	begin	// Do the standard NewtApp RemoveScript stuff	(partFrame.removeFrame):NewtRemoveScript(partFrame.removeFrame);	// Unhook the EnRoute extension components	try call kER_Remove_MIME_extn with ();	onexception |evt.ex| do nil;	end;
//Filter.partInfopartData := {	author:			"Les R. Titze",	copyright:		"© 1996 Netstrategy Software Inc.",	};//partData.RegEmail := kRegEmailSystem;constant kFilterVersion  := "1.0";constant kPartName       := "Mail Font Picker";constant kPartFrameTitle := kPartName;OpenResFile( Home & "resources"); 	DefConst ( 'kLibIcon, GetPICTAsBits ( "AddonIcon", true ) );CloseResFile();SetPartFrameSlot ( 'text, kPartName ); // give extras icon a better nameSetPartFrameSlot ( 'icon, kLibIcon );SetPartFrameSlot ( 'closeControl, true );SetPartFrameSlot ( 'TapAction, func()	begin	local owner := ResolveEntryAlias ( userConfiguration.currentPersona );	if owner then owner := owner.name;	if owner then owner := owner.last;	owner := (owner and IsString(owner) and StrEqual(owner,"Titze") );	local pkg := LFetch ( GetPackages(), kPartFrameTitle, 0, '|str=|, 'title );	local pkgE := GetPackageEntry ( kPartFrameTitle, pkg.store );	local info := GetPkgRefInfo(pkgE.pkgRef);	local s := LongDateStr ( info.creationdate, (ROM_datetimestrspecs).yearMonthDayStrSpec );	if owner then		begin		s := LongDateStr  ( info.creationdate, (ROM_datetimestrspecs).abbrDayOfWeekStrSpec )			&& ShortDateStr  ( info.creationdate, (ROM_datetimestrspecs).numericDateStrSpec )			&& HourMinute ( info.creationdate );		s := "Created:" && s & unicodeCR;	// DateNTime(info.creationdate) & unicodeCR;		s := s & "Size:" && info.size & unicodeCR;		end;	else		s := "Created:" && s & unicodeCR;	s := s & "Author: Les R. Titze" & unicodeCR;	s := s & "© 1996 Netstrategy Software" & unicodeCR;	s := s & "\nA prefs utility for the EnRoute internet transport." & unicodeCR;	local height := 125;	local a := BuildContext ( {	    _proto: @180,	    viewJustify: 80,	    viewBounds: SetBounds ( 0, 0, 200, height ),	    stepChildren: [	      { _proto: @229,	        title: kPartName && kFilterVersion,	        },	      { _proto: @218,	        text: s,	        viewJustify: 240,	        viewBounds: SetBounds(5, 22, -5, -5),	        viewFont: @100,	        },		]		} );	a:Open();	return nil;	end );
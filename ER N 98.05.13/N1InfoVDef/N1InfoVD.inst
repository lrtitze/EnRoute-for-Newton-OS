DefConst ( 'k_infoVDef, GetLayout ( "N1InfoVDef" ) );DefConst ( 'k_UPDATE_PREFS, true );InstallScript := func ( partFrame, removeFrame )	begin	//UnregisterViewDef ( k_infoVDefSym, k_infoDDefSym );	if k_UPDATE_PREFS then		begin		local s := GetUnionSoupAlways ( "Names" );		local q := { type: 'index, indexPath: 'sorton, tagSpec: { equal: '_ownerNames } };		local c := s:Query( q );		local e := c:Entry();		while e do			begin			if IsFrame(e.enRouteAccess) and e.enRouteAccess.enRoutePopName then				begin				e.owner.|enRouteN1:Access| := e.enRouteAccess;				if kDebugOn then					begin					write ( "Updated owner slot for " );					print ( GetRoot():bcFullName(e.name) );					end;				RemoveSlot ( e, 'enRouteAccess );				EntryChangeXmit(e,nil);				end;			e := c:Next();			end;		end;	RegisterViewDef ( k_infoVDef, EnsureInternal ( k_infoDDefSym ) );	// kERMailTxtView	end;RemoveScript := func ( removeFrame )	begin	UnregisterViewDef ( k_infoVDefSym, k_infoDDefSym );	end;
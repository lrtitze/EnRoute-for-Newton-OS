		// ===================== CC LIST =======================		sPos := StrPos ( theTxt, "\nCc:", 0);		if sPos then			begin			currRxMsg.txtCC := call funcUnwrappedLine with ( theTxt, sPos+5 );			// LRT - 97/04/22 1:49 AM			// MS-Mail puts a comma between "Last, First"			currRxMsg.txtCC :=				call k_822QuotesToOptsFunc with ( currRxMsg.txtCC );			currRxMsg.cc := [];			tokFunc := StrTokenize ( currRxMsg.txtCC, $, );			while piece := call tokFunc with () do				begin				try					theAddress :=						call k_AddrFrom822Func with ( piece );					theAddress :=						mailDataDef:MakeNameRef ( theAddress, addressingClass_ER );					ArrayInsert ( currRxMsg.cc, theAddress, Length(currRxMsg.cc) );				onexception |evt.ex| do nil;				end;			end;